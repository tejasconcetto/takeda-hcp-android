<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="@dimen/margin_15"
  android:orientation="vertical"
  android:layout_gravity="center"
  android:layout_margin="@dimen/margin_20"
  android:background="@drawable/dialog_bg">

  <TextView
    android:gravity="center"
    android:layout_gravity="left"
    android:id="@+id/dialog_title"
    android:textSize="18sp"
    android:textColor="@color/black"
    android:text="Enquiry Submitted"
    style="@style/MyTextViewCOrderBold"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

  <LinearLayout
    android:layout_marginTop="5dp"
    android:id="@+id/email_details_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">


    <TextView
      android:textColor="@color/black"
      android:textSize="15sp"
      style="@style/MyTextViewAddress"
      android:id="@+id/contactDetail"
      android:text="email@gmail.com"/>

  </LinearLayout>

  <View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="@color/emptyGray"
    android:layout_marginTop="@dimen/margin_15"/>


  <LinearLayout

    android:gravity="center"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
      android:layout_weight="1"
      android:layout_marginRight="@dimen/margin_10"
      android:id="@+id/posBtn"
      android:layout_height="30dp"
      android:layout_width="match_parent"
      android:background="@android:color/transparent"
      android:textSize="18sp"
      android:textColor="@color/colorFButton"
      android:text="OK"/>

    <Button
      android:layout_weight="1"
      android:layout_marginLeft="@dimen/margin_10"
      android:id="@+id/negBtn"
      android:layout_height="30dp"
      android:layout_width="match_parent"
      android:background="@android:color/transparent"
      android:textSize="18sp"
      android:textColor="@color/colorFButton"
      android:text="Cancle"/>

  </LinearLayout>

</LinearLayout>